{
  "name": "clean-ts-api",
  "version": "1.1.0",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/main/server.ts",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "style:check": "prettier --check 'src/**/**/*.{ts,tsx,js,jsx}'",
    "style:write": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test",
    "test:ci": "npm test -- --coverage"
  },
  "keywords": [
    "nodejs",
    "rest api",
    "tdd",
    "clean architecture",
    "typescript"
  ],
  "author": "Marcelo Shirayama",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "2.2.0",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "17.0.21",
    "@types/supertest": "2.0.11",
    "@types/validator": "13.7.1",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "git-commit-msg-linter": "4.1.0",
    "husky": "^7.0.0",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "bcrypt": "5.0.1",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "fast-glob": "3.2.11",
    "jsonwebtoken": "8.5.1",
    "mongodb": "4.4.0",
    "validator": "13.7.0"
  }
}
